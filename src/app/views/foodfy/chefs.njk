{% extends "foodfy/layout.njk" %}

{% block content %}
  <header id="main-header">
    <nav>
      <img class="logo" src="/assets/logo.png" alt="">
      <a href="/foodfy/about">Sobre</a>
      <a href="/foodfy/recipes">Receitas</a>
      <a href="/foodfy/chefs">Chefs</a>
      <a href="/admin/recipes">Admin</a>
    </nav>
  </header>

  <section class="cards chefs">
    {% for chef in chefs %}
      <div class="card">
        <img id="{{chef.id}}" class="image-chef" src="{{chef.avatar_url}}" alt="">
        <div class="info">
          <strong>{{chef.name}}</strong>
          <p>{{chef.total_recipes}} receitas</p>
        </div>
      </div>
    {% endfor %}
  </section>
{% endblock content %}