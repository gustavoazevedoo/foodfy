{% extends "admin/layout.njk" %}

{% block content %}
  <div class="actions">
    <h2>Editando chef</h2>
    <div class="form-buttons">
      <button form="delete-chef" type="submit">Deletar</button>
      <button form="save-chef" type="submit">Salvar chef</button>
    </div>
  </div>
  <form id="save-chef" method="POST" action="/admin/chefs?_method=PUT" >
    <input type="hidden" name="id" value="{{chef.id}}">

    <div class="item">
      <h4>Nome</h4>
      <input type="text" name="name" value="{{chef.name}}">
    </div>

    <div class="item">
      <h4>Avatar</h4>
      <input type="url" name="avatar_url" value="{{chef.avatar_url}}" placeholder="http://">
    </div>
  </form>

  <form id="delete-chef" method="POST" action="/admin/chefs?_method=DELETE">
    <input type="hidden" name="id" value="{{chef.id}}">
  </form>
{% endblock content %}