{% extends "admin/layout.njk" %}

{% block content %}
  <div class="actions">
    <h2>Criando chef</h2>
    <div class="form-buttons">
      <button form="save-chef" type="submit">Salvar chef</button>
    </div>
  </div>

  <form id="save-chef" method="POST" action="/admin/chefs">
    <div class="item">
      <h4>Nome</h4>
      <input type="text" name="name">
    </div>

<div class="item">
  <h4>Avatar</h4>
  <div>
    <div id="photos-upload">
      <input 
        id="photos-input" 
        type="file" 
        name="photos" 
        multiple 
        accept="/image/*"
	    >
			<p>Enviar Avatar</p>
    </div>
    <div id="photos-preview">

    </div>
  </div>
</div>
  </form>
{% endblock content %}