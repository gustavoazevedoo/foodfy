{% extends "admin/layout.njk" %}

{% block content %}
  <div class="actions">
    <h2>Gerenciar chefs</h2>
    <a href="/admin/chefs/create">Novo +</a>
  </div>

  <section class="cards chefs">
    {% for chef in chefs %}
      <div class="card">
        <img id="{{chef.id}}" class="image-chef" src="{{chef.avatar_url}}" alt="">
        <div class="info">
          <strong>{{chef.name}}</strong>
          <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
        </div>
      </div>
    {% endfor %}
  </section>
{% endblock content %}

