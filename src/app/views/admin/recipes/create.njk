{% extends "admin/layout.njk" %}

{% block content %}
  <div class="actions">
    <h2>Criando receita</h2>
    <div class="form-buttons">
      <button form="save-recipe" type="submit">Salvar receita</button>
    </div>
  </div>

  <form id="save-recipe" method="POST" action="/admin/recipes">

    <div class="item">
      <h4>Imagem da receita</h4>
      <input type="url" name="image" placeholder="http://">
    </div>

    <div class="item">
      <h4>Título da receita</h4>
      <input type="text" name="title">
    </div>

    <div class="item">
      <h4>Chef</h4>
      <select  name="chef">
        {% for chef in chefOptions %}
          <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected {%endif%}>
            {{chef.name}}
          </option>
        {% endfor %}
      </select>
    </div>
    
    <div class="item">
      <h4>Ingredientes</h4>
      <div id="ingredients">
        <div class="ingredient">
          <input type="text" name="ingredients[]" value="" placeholder="Ingredient" />
        </div>
      </div>
      <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
    </div>

    <div class="item">
      <h4>Modo de preparo</h4>
      <div id="preparations">
        <div class="preparation">
          <input type="text" name="preparation[]" value="" placeholder="Preparation" />
        </div>
      </div>
      <button type="button" class="add-preparation">Adicionar novo passo</button>
    </div>

    <div class="item">
      <h4>Informações adicionais</h4>
      <textarea name="information" rows="10"></textarea>
    </div>
  </form>
{% endblock content %}